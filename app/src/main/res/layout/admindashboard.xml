<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_600"
            android:padding="16dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_user_profile"
                android:scaleType="centerCrop"
                android:contentDescription="User Image"
                android:background="@drawable/circle_background" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:text="Halo, Febriana" />

            <TextView
                android:id="@+id/user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:text="Super Admin"
                android:textColor="@android:color/darker_gray" />
        </RelativeLayout>

        <!-- Income -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rp 10.260.000,-"
                android:textColor="@color/gray_800"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pendapatan"
                android:textColor="@color/gray_500"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Vehicle and Staff Info -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="1"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="16dp">

            <!-- Motor Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_column="0">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_motorcycle"
                    android:tint="@color/blue_600" />

                <TextView
                    android:id="@+id/motor_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2908"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motor"
                    android:textColor="@color/gray_500"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Car Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_column="1">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_car"
                    android:tint="@color/blue_600" />

                <TextView
                    android:id="@+id/car_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2908"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobil"
                    android:textColor="@color/gray_500"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Staff Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_column="2">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_staff"
                    android:tint="@color/blue_600" />

                <TextView
                    android:id="@+id/staff_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Petugas"
                    android:textColor="@color/gray_500"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </GridLayout>

        <!-- Manage Data Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kelola Data"
            android:textColor="@color/gray_800"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <!-- Individual Manage Data Cards -->
        </GridLayout>

        <!-- History Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Riwayat"
            android:textColor="@color/gray_800"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

        <!-- History Table -->
    </LinearLayout>
</ScrollView>
