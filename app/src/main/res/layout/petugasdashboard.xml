<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboardActivity">

    <!-- Header -->
    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:background="@drawable/bgheader" />
    <View
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/bubble" />

    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="User Image"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <!-- User Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Halo, Febriana"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- User Role -->
        <TextView
            android:id="@+id/user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_alignStart="@id/user_name"
            android:layout_marginTop="4dp"
            android:text="Super Admin"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

    <!-- Cards Container -->
    <RelativeLayout
        android:id="@+id/income_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/card">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/uang" />

        <TextView
            android:id="@+id/income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/imageView2"
            android:fontFamily="sans-serif-black"
            android:text="Rp 10.260.000,-"
            android:textColor="#272B3C"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/income"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imageView2"
            android:text="Pendapatan"
            android:textColor="#272B3C" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cards_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/income_card"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <!-- Motor Card -->
        <RelativeLayout
            android:id="@+id/motor_card"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/card">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/motor" />

            <TextView
                android:id="@+id/motor_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/imageView3"
                android:fontFamily="sans-serif-black"
                android:text="250"
                android:textColor="#272B3C"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/motor_count"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/imageView3"
                android:text="Motor"
                android:textColor="#272B3C" />
        </RelativeLayout>

        <!-- Car Card -->
        <RelativeLayout
            android:id="@+id/car_card"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/card">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/mobil" />

            <TextView
                android:id="@+id/car_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imageView4"
                android:layout_marginStart="10dp"
                android:text="250"
                android:textColor="#272B3C"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_count"
                android:layout_toEndOf="@id/imageView4"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Mobil"
                android:textColor="#272B3C" />
        </RelativeLayout>

        <!-- Staff Card -->
        <RelativeLayout
            android:id="@+id/staff"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@drawable/card">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/pp" />

            <TextView
                android:id="@+id/staff_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imageView5"
                android:layout_marginStart="10dp"
                android:text="4"
                android:textColor="#272B3C"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/staff_count"
                android:layout_toEndOf="@id/imageView5"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="Petugas"
                android:textColor="#272B3C" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:text="Kelola Data"
        android:textColor="#272B3C" />

    <LinearLayout
        android:id="@+id/cards_button"
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:layout_below="@id/cards_container"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_petugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/pp1"
            android:gravity="center"
            android:text="Petugas"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_gerai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/pp1"
            android:gravity="center"
            android:text="Gerai"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_absensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/pp1"
            android:gravity="center"
            android:text="Absensi"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/pp1"
            android:gravity="center"
            android:text="Laporan"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="510dp"
        android:text="Riwayat"
        android:textColor="#272B3C" />

    <!-- Header Row -->
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="550dp"
        android:padding="16dp"
        android:background="@drawable/card"
        android:orientation="vertical">

        <!-- Header Row -->
        <TableRow
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shift"
                android:padding="8dp"
                android:background="@drawable/headertable"
                android:textColor="#272B3C"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tanggal"
                android:padding="8dp"
                android:background="@drawable/headertable"
                android:textColor="#272B3C"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QTY"
                android:padding="8dp"
                android:background="@drawable/headertable"
                android:textColor="#272B3C"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biaya"
                android:padding="8dp"
                android:background="@drawable/headertable"
                android:textColor="#272B3C"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kendaraan"
                android:padding="8dp"
                android:background="@drawable/headertable"
                android:textColor="#272B3C"
                android:textStyle="bold" />
        </TableRow>

        <!-- Data rows akan ditambahkan secara dinamis melalui kode Java -->
    </TableLayout>


</RelativeLayout>
